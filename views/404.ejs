<%- include('partials/header') %>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 text-center">
            <div class="py-5">
                <!-- 404 Icon -->
                <div class="mb-4">
                    <i class="bi bi-emoji-frown" style="font-size: 8rem; color: var(--primary-color);"></i>
                </div>
                
                <!-- Error Message -->
                <h1 class="display-1 fw-bold text-gradient">404</h1>
                <h2 class="h3 fw-bold mb-3"><%= title || 'Halaman Tidak Ditemukan' %></h2>
                <p class="lead text-muted mb-4">
                    <%= message || 'Maaf, halaman yang Anda cari tidak dapat ditemukan.' %>
                </p>
                
                <!-- Action Buttons -->
                <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center">
                    <a href="/" class="btn btn-primary">
                        <i class="bi bi-house-fill me-2"></i>Kembali ke Beranda
                    </a>
                    <a href="/search" class="btn btn-outline-primary">
                        <i class="bi bi-search me-2"></i>Cari Anime
                    </a>
                </div>
                
                <!-- Suggestions -->
                <div class="mt-5">
                    <h5 class="fw-bold mb-3">Mungkin Anda mencari:</h5>
                    <div class="d-flex flex-wrap gap-2 justify-content-center">
                        <a href="/schedules" class="btn btn-sm btn-outline-secondary">Jadwal Anime</a>
                        <a href="/news" class="btn btn-sm btn-outline-secondary">Berita Anime</a>
                        <a href="/forum" class="btn btn-sm btn-outline-secondary">Forum Diskusi</a>
                        <a href="/watchlist" class="btn btn-sm btn-outline-secondary">Watchlist</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>

