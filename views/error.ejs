<%- include('partials/header') %>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 text-center">
            <div class="py-5">
                <!-- Error Icon -->
                <div class="mb-4">
                    <i class="bi bi-exclamation-triangle" style="font-size: 6rem; color: var(--secondary-color);"></i>
                </div>
                
                <!-- Error Message -->
                <h1 class="h2 fw-bold mb-3"><%= title || 'Terjadi Kesalahan' %></h1>
                <p class="lead text-muted mb-4">
                    <%= error || 'Maaf, terjadi kesalahan pada server. Silakan coba lagi nanti.' %>
                </p>
                
                <!-- Action Buttons -->
                <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center">
                    <button onclick="window.history.back()" class="btn btn-primary">
                        <i class="bi bi-arrow-left me-2"></i>Kembali
                    </button>
                    <a href="/" class="btn btn-outline-primary">
                        <i class="bi bi-house-fill me-2"></i>Beranda
                    </a>
                    <button onclick="window.location.reload()" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-clockwise me-2"></i>Muat Ulang
                    </button>
                </div>
                
                <!-- Help Section -->
                <div class="mt-5">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <i class="bi bi-question-circle text-info me-2"></i>
                                Butuh Bantuan?
                            </h5>
                            <p class="card-text text-muted">
                                Jika masalah terus berlanjut, silakan coba:
                            </p>
                            <ul class="list-unstyled text-start">
                                <li class="mb-2">
                                    <i class="bi bi-check-circle text-success me-2"></i>
                                    Refresh halaman (Ctrl+F5)
                                </li>
                                <li class="mb-2">
                                    <i class="bi bi-check-circle text-success me-2"></i>
                                    Periksa koneksi internet Anda
                                </li>
                                <li class="mb-2">
                                    <i class="bi bi-check-circle text-success me-2"></i>
                                    Coba lagi dalam beberapa menit
                                </li>
                                <li class="mb-0">
                                    <i class="bi bi-check-circle text-success me-2"></i>
                                    Hubungi administrator jika masalah berlanjut
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>

