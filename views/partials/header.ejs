<!DOCTYPE html>
<html lang="id" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
    
    <meta name="description" content="Website informasi anime terlengkap dengan data dari MyAnimeList">
    <meta name="keywords" content="anime, manga, myanimelist, jadwal anime, berita anime">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">
                <i class="bi bi-play-circle-fill text-primary me-2"></i>
                AnimeHub
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link <%= currentUrl === '/' ? 'active' : '' %>" href="/">
                            <i class="bi bi-house-fill me-1"></i>Beranda
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= currentUrl.startsWith('/schedules') ? 'active' : '' %>" href="/schedules">
                            <i class="bi bi-calendar-week me-1"></i>Jadwal
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= currentUrl.startsWith('/search') ? 'active' : '' %>" href="/search">
                            <i class="bi bi-search me-1"></i>Pencarian
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= currentUrl.startsWith('/news') ? 'active' : '' %>" href="/news">
                            <i class="bi bi-newspaper me-1"></i>Berita
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= currentUrl.startsWith('/forum') ? 'active' : '' %>" href="/forum">
                            <i class="bi bi-chat-dots me-1"></i>Forum
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= currentUrl.startsWith('/watchlist') ? 'active' : '' %>" href="/watchlist">
                            <i class="bi bi-bookmark-heart me-1"></i>Watchlist
                        </a>
                    </li>
                </ul>
                
                <ul class="navbar-nav">
                    <% if (typeof isAdmin !== 'undefined' && isAdmin) { %>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-gear-fill me-1"></i>Admin
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/admin/dashboard">Dashboard</a></li>
                                <li><a class="dropdown-item" href="/admin/news">Kelola Berita</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/admin/logout">Logout</a></li>
                            </ul>
                        </li>
                    <% } else { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/login">
                                <i class="bi bi-box-arrow-in-right me-1"></i>Admin
                            </a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="main-content">

